<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="4.0">

<welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-class>by.epam.baranovsky.banking.controller.Controller</servlet-class>
        <servlet-name>controller</servlet-name>
    </servlet>

    <servlet-mapping>
        <servlet-name>controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>4

    <filter>
        <filter-name>AccessFilter</filter-name>
        <filter-class>by.epam.baranovsky.banking.controller.filter.AccessFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AccessFilter</filter-name>
        <servlet-name>controller</servlet-name>
    </filter-mapping>

    <filter>
        <filter-name>Locale filter</filter-name>
        <filter-class>by.epam.baranovsky.banking.controller.filter.LocaleFilter</filter-class>
        <init-param>
            <param-name>requestEncoding</param-name>
            <param-value>utf-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>Locale filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>by.epam.baranovsky.banking.controller.listener.AppCycleListener</listener-class>
    </listener>

    <error-page>
        <error-code>404</error-code>
        <location>/jsp/404.jsp</location>
    </error-page>

</web-app>